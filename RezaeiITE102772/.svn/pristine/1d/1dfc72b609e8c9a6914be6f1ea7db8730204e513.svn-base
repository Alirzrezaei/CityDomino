package logic;


/**
 *
 * @author Alireza
 */
public class Human extends Player{
    
    private final boolean isHuman = true;
    /**
     * a constructor to receive board and domino for the user
     * @param name
     * @param board
     * @param domino 
     */
    public Human(String name, Board board, Domino domino) {
        super(name, board, domino);
       
    }
    /**
     * the constructor to receive dimensions to create a board for player
     * @param name
     * @param x
     * @param y 
     */
    public Human(String name, int x, int y){
        super("Human" + name, x, y);
    }
    public boolean isHuman(){
        return this.isHuman;
    }
    
    
}
